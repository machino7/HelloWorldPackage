{
    "name": "machine/hello",
    "description": "Package",
    "type": "library",
    "require": {
        "php": "^7.4"
    },
    "license": "Apache-2.0",
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.3",
        "phpunit/phpunit": "^8.5"
    },
    "autoload": {
        "psr-4": {
            "Machine\\Hello\\": "src"
        }
    },
    "autoload-dev": {
